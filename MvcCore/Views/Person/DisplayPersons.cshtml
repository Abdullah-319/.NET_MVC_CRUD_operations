@model IEnumerable<MvcCore.Models.Domain.Person>

@{
}

<div class="mt-2 mx-auto" style="width: 50%">
    <div class="row">
        <h2>Persons:</h2>

        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var person in Model)
                {
                    <tr>
                        <td>@person.Name</td>
                        <td>@person.Email</td>
                        <td>
                            <a class="btn btn-success" href="/Person/EditPerson?id=@person.Id">Edit</a>
                            <a class="btn btn-danger" href="/Person/DeletePerson?id=@person.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <div class="col-md-5">
            <a href="/Person/AddPerson" class="btn btn-primary">Add Person</a>
        </div>

    </div>
</div>